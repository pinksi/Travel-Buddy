    tools:context="com.example.pinky.tryy.Reservation1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/tv1"
        android:text="Available route"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#ff204a87"
        android:background="#eeeeec"
        />

        <Button
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:gravity="left"
            android:text="Bhaktapur"
            android:textSize="30sp"
            android:textColor="#eeeeec"
            android:background="#ff204a87"
            android:onClick="okk"
        />


    <Button
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Lalitpur"
        android:textSize="30sp"
        android:textColor="#eeeeec"
        android:gravity="left"
        android:background="#ff204a87"
        android:onClick="okk"
        />
    <Button
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Dhulikhel"
        android:textSize="30sp"
        android:gravity="left"
        android:textColor="#eeeeec"
        android:background="#ff204a87"
        android:onClick="okk"
        />
    <Button
        android:padding="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="kathmandu"
        android:gravity="left"
        android:textSize="30sp"
        android:textColor="#eeeeec"
        android:background="#ff204a87"
        android:onClick="okk"
        />



</LinearLayout>
